<div class="container">
  <h1>Detalles de task ID: <%= @task.id %></h1>
  <h3><%= @task.completed ? "[X]" : "[ ]" %> <%= @task.title %></h3>
  <div><%= @task.details %></div>
  <%= link_to "Editar", edit_task_path(@task), class: 'btn' %>
  <%= link_to "Volver a lista", tasks_path, class: 'btn' %>
  <%= link_to "Borrar", task_path(@task), method: :delete, data: { confirm: "Segur@?" }, class: 'btn' %>
</div>
